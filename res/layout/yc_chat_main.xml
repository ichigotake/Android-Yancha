<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" 
    >
    
       <include
            android:id="@+id/chatIncludeMessageList"
            android:layout_above="@+id/chatInformation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/yc_common_message_cell_list" />
    
       <RelativeLayout
            android:id="@+id/chatInformation"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:gravity="center|left"
            android:padding="4dp"
            android:layout_above="@+id/chatInputArea"
            android:background="#004065">

           <LinearLayout
                android:id="@+id/chatJoinUsersIcon"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="8dp"
               >
               
            <TextView 
                android:id="@+id/chatJoinUsersCount"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:minHeight="48dp"
                android:minWidth="48dp"
                android:gravity="center"
                android:drawableLeft="@drawable/ic_action_user"
                android:text="@string/yc_dummy_join_users_count"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:contentDescription="@string/join_users_image_content_description" />

        </LinearLayout>

        <TextView 
            android:id="@+id/chatSelectedTagSelected"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/chatJoinUsersIcon"
            android:layout_marginRight="4dp"
            android:minHeight="36dp"
            android:paddingRight="6dp"
            android:paddingLeft="6dp"
            android:gravity="center"
            android:background="#ffffff"
            android:text="@string/yc_default_tag"
            android:textSize="20sp" />
        
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/chatInputArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:paddingTop="3dp"
        android:background="#ffffff" >

        <Button
            android:id="@+id/chatSendMessageSend"
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/yc_submit" />

        <EditText
            android:id="@+id/chatSendMessageText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:hint=""
            android:inputType="text"
            android:imeOptions="actionSend"
            android:layout_toLeftOf="@id/chatSendMessageSend"
             />

    </RelativeLayout>
        
</RelativeLayout>