<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff" 
    >
    
    <TextView 
        android:id="@+id/textView_linkSearch"
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:text="@string/st_link_search"
        android:textSize="16sp"
        android:gravity="center"
        android:background="#dddddd"
        />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

    	<include layout="@layout/common_message_cell_list" />

    </LinearLayout>
    
    
    
    <LinearLayout
        android:id="@+id/input_area"
        android:layout_width="match_parent" 
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="3dp"
        android:background="#004065"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_margin="4dp"
            >
            <ImageView 
                android:id="@+id/ic_join_users"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
				android:textDirection="inherit"
                android:src="@drawable/ic_action_user"
                android:contentDescription="@string/join_users_image_content_description" />

            <TextView 
                android:id="@+id/selected_tag"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/ic_join_users"
                android:layout_marginRight="4dp"
                android:paddingRight="6dp"
                android:paddingLeft="6dp"
                android:gravity="center"
                android:background="#ffffff"
                android:text="@string/st_default_tag"
                android:textSize="16sp" />
            
            <TextView 
                android:layout_height="50dp"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/selected_tag"
                android:drawableLeft="@drawable/ic_action_refresh"
                android:text="@string/st_chat_status_offline"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="#ffffff"/>
            </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff" >

            <Button
                android:id="@+id/button_send"
                android:layout_width="74dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="@string/st_submit" />

            <EditText
                android:id="@+id/editText_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:hint=""
                android:layout_toLeftOf="@id/button_send"
                 />

        </RelativeLayout>
        
    </LinearLayout>
    
</LinearLayout>