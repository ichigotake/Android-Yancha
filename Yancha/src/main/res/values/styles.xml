<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="YanchaAppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="YanchaAppTheme" parent="YanchaAppBaseTheme">
        <item name="android:background">@color/yc_background</item>
    </style>

    <style name="YanchaMessageCellSeparator">
        <item name="android:gravity">center|center</item>
        <item name="android:background">#EDEDED</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
